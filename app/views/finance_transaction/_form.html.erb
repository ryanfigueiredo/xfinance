    <select class="form-select" id="inlineFormSelectPref">
      <option selected>Revenue</option>
      <option value="1">Expense</option>
    </select>
  </div>

  <div class="col-12">
    <label class="visually-hidden" for="inlineFormInputGroupUsername">Title</label>
